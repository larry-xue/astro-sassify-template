---
const services = [
  { name: "Envíos Express", icon: "bolt", link: "/envios-express" },
  { name: "Envíos LowCost", icon: "piggy-bank", link: "/envios-lowcost" },
  { name: "Moto Express", icon: "motorcycle", link: "/moto-express" },
  { name: "Plan Emprendedores", icon: "store", link: "/plan-emprendedores" }
];
---

<!-- Blue section with services -->
<div class="w-full overflow-hidden" transition:animate="slide">
  <div class="relative bg-gradient-to-r from-blue-900 to-blue-800 dark:from-blue-950 dark:to-blue-900 py-12 md:py-16">
    <!-- Animated background elements -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
      <div class="absolute -top-10 -left-10 w-40 h-40 bg-amber-400/10 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 right-1/4 w-60 h-60 bg-blue-500/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-20 -right-20 w-40 h-40 bg-amber-400/10 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container-custom relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
        <div class="transform transition-all duration-500 hover:scale-105">
          <div class="text-3xl md:text-4xl font-bold text-white dark:text-white leading-tight">
            Servicios de <span class="bg-amber-400 text-blue-800 px-2 py-1 rounded-md shadow-lg">mensajería</span> rápidos y confiables.
          </div>
          <p class="text-blue-100 dark:text-blue-200 mt-4 max-w-lg">
            Ofrecemos soluciones de entrega adaptadas a tus necesidades, con precios competitivos y servicio profesional.
          </p>
          <a href="/servicios" class="inline-flex items-center mt-6 text-amber-400 hover:text-amber-300 font-medium transition-colors">
            Ver todos los servicios
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 animate-bounce-x" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </div>
        
        <div class="flex flex-col items-start md:items-end justify-center">
          <p class="text-sm uppercase tracking-wider text-amber-400 dark:text-amber-300 font-medium mb-6 relative">
            NUESTROS SERVICIOS
            <span class="absolute -bottom-2 left-0 md:right-0 md:left-auto w-20 h-1 bg-amber-400 rounded-full"></span>
          </p>
          
          <div class="grid grid-cols-2 gap-x-8 gap-y-6 w-full max-w-md">
            {services.map(service => (
              <a href={service.link} class="group flex items-center space-x-3 transition-all duration-300 transform hover:translate-x-2">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-amber-400/20 group-hover:bg-amber-400/30 flex items-center justify-center transition-colors">
                  <i class={`fas fa-${service.icon} text-amber-400`}></i>
                </div>
                <span class="text-white dark:text-white font-medium group-hover:text-amber-300 transition-colors">{service.name}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes bounce-x {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(5px); }
  }
  
  .animate-bounce-x {
    animation: bounce-x 1s infinite;
  }
</style>