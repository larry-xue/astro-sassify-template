---
interface Props {
  title: string;
  subtitle?: string;
  imageUrl?: string;
}

const { 
  title = "Preguntas Frecuentes", 
  subtitle = "Resolvemos tus dudas sobre envíos y delivery. ¿No encuentras lo que buscas? ¡Contáctanos!",
  imageUrl = "../assets/img/faqs.png"
} = Astro.props;
---

<!-- Hero Section -->
<section class="relative overflow-hidden pt-32 pb-16 md:pt-40 md:pb-24">
  <!-- Background elements -->
  <div class="absolute inset-0 bg-gradient-to-b from-blue-50 to-white dark:from-blue-950 dark:to-blue-900 z-0"></div>
  
  <!-- Animated patterns -->
  <div class="absolute inset-0 z-0 opacity-20">
    <div class="absolute top-0 left-0 w-full h-full bg-[url('/images/pattern-dots.svg')] bg-repeat opacity-30 dark:opacity-10"></div>
  </div>
  
  <!-- Animated shapes -->
  <div class="absolute top-1/4 right-5 w-24 h-24 bg-amber-400 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
  <div class="absolute bottom-1/4 left-10 w-32 h-32 bg-blue-400 rounded-full filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 1s;"></div>
  
  <div class="container-custom relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12">
      <div class="text-center md:text-left md:w-1/2 fade-in">
        <!-- Company name with animated underline -->
        <div class="inline-block mb-4">
          <span class="text-blue-700 dark:text-blue-300 font-medium tracking-wider text-lg relative">
            ENVIOS DOSRUEDAS
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-amber-400 animate-expand-line"></span>
          </span>
        </div>
        
        <!-- Main title with gradient -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-900 dark:from-blue-300 dark:to-blue-100 slide-up">
          {title}
        </h1>
        
        <!-- Subtitle with animated highlight -->
        <p class="text-xl text-blue-700 dark:text-blue-200 mb-8 max-w-lg slide-up" style="animation-delay: 200ms;">
          {subtitle}
        </p>
        
        <!-- Search bar -->
        <div class="relative max-w-md mx-auto md:mx-0 mb-8 slide-up" style="animation-delay: 300ms;">
          <input 
            type="text" 
            placeholder="Buscar una pregunta..." 
            class="w-full py-3 px-5 pr-12 rounded-full border-2 border-blue-200 dark:border-blue-700 focus:border-amber-400 dark:focus:border-amber-400 focus:outline-none bg-white dark:bg-blue-800 text-blue-900 dark:text-blue-100 shadow-md hover:shadow-lg transition-all"
          />
          <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-blue-500 dark:text-blue-300 hover:text-amber-500 dark:hover:text-amber-400 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
        
        <!-- Contact button -->
        <a href="/contacto" class="inline-flex items-center gap-2 py-2 px-4 text-blue-700 dark:text-blue-300 hover:text-amber-500 dark:hover:text-amber-400 font-medium transition-colors slide-up" style="animation-delay: 400ms;">
          <span>¿No encuentras lo que buscas?</span>
          <span class="underline">Contáctanos</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 animate-bounce-x" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
      
      <!-- Decorative image with floating animation -->
      <div class="md:w-1/2 relative fade-in" style="animation-delay: 300ms;">
        <div class="relative z-10 floating-element">
          <img 
            src={imageUrl || "/images/faq-illustration.svg"} 
            alt="Preguntas Frecuentes" 
            class="max-w-full h-auto rounded-lg shadow-2xl border-4 border-white dark:border-blue-800"
          />
          
          <!-- Decorative elements -->
          <div class="absolute -top-6 -right-6 w-12 h-12 bg-amber-400 rounded-full flex items-center justify-center shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          
          <div class="absolute -bottom-4 -left-4 px-4 py-2 bg-white dark:bg-blue-800 rounded-lg shadow-lg">
            <div class="flex items-center gap-2">
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-blue-700 dark:text-blue-200">Respuestas en tiempo real</span>
            </div>
          </div>
        </div>
        
        <!-- Background glow -->
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full bg-blue-400 dark:bg-blue-600 rounded-full filter blur-3xl opacity-20 animate-pulse-slow"></div>
      </div>
    </div>
  </div>
  
  <!-- Wave divider -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-none">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-16 text-white dark:text-blue-900">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V120H0V95.8C59.71,118.11,130.83,141.14,214.86,115.68,271.88,97.11,312.83,67.78,321.39,56.44Z" class="fill-current"></path>
    </svg>
  </div>
</section>

<style>
  /* Floating animation */
  .floating-element {
    animation: floating 6s ease-in-out infinite;
  }
  
  @keyframes floating {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0px); }
  }
  
  /* Expanding line animation */
  @keyframes expand-line {
    0% { width: 0; }
    100% { width: 100%; }
  }
  
  .animate-expand-line {
    animation: expand-line 1.5s ease-out forwards;
  }
  
  /* Horizontal bounce animation */
  @keyframes bounce-x {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(5px); }
  }
  
  .animate-bounce-x {
    animation: bounce-x 1s infinite;
  }
  
  /* Slow pulse animation */
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.3; transform: scale(1.1); }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 4s infinite;
  }
  
  /* Slide up animation */
  @keyframes slide-up {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  .slide-up {
    animation: slide-up 0.8s ease-out forwards;
  }
  
  /* Fade in animation */
  @keyframes fade-in {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }
  
  .fade-in {
    animation: fade-in 1s ease-out forwards;
  }
</style>
