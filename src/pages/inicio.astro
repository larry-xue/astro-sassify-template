---
// Import the correct layout and components
// Make sure these components exist in your project
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// Conditionally import components if they exist
let Hero, Features, Testimonials;
try {
  Hero = await import('../components/Hero.astro');
  Features = await import('../components/Features.astro');
  Testimonials = await import('../components/Testimonials.astro');
} catch (e) {
  // Components not found, will handle in the template
  console.error("Some components could not be loaded:", e);
}
---

<Layout title="Mensajería Express en Mar del Plata | Envíos Urgentes y Delivery Rápido">
  <Header />
  <main>
    {Hero && <Hero.default />}
    {Features && <Features.default />}
    {Testimonials && <Testimonials.default />}
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener('astro:page-load', () => {
    // Any page-specific JavaScript can go here
    console.log('Inicio page loaded');
  });
</script>